<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HistoryController">
    <stylesheets>
        <URL value="@css/history.css" />
    </stylesheets>
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="top-bar">
            <Button onAction="#goBack" styleClass="back-button" text="←" />
            <Label styleClass="page-title" text="Histórico de Exibição" />
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <FlowPane fx:id="postsGrid" hgap="20" vgap="20" style="-fx-padding: 20;" />
            </content>
        </ScrollPane>
    </center>
</BorderPane>
