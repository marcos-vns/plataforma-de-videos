<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <stylesheets>
        <URL value="@css/login.css" />
    </stylesheets>
    <children>
        <VBox alignment="CENTER" layoutX="445.0" layoutY="180.0" prefHeight="360.0" prefWidth="390.0" spacing="25.0">
            <children>
                <Label styleClass="login-title" text="Bem Vindo" />
                <TextField fx:id="emailField" promptText="email" styleClass="text-input" />
                <PasswordField fx:id="passwordField" promptText="senha" styleClass="text-input" />
                <Button fx:id="loginButton" onAction="#login" styleClass="login-button" text="Login" />
                <Button fx:id="registerButton" onAction="#register" styleClass="secondary-button" text="Cadastrar" />
            </children>
        </VBox>
    </children>
</AnchorPane>
