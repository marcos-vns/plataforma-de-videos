<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">
    <stylesheets>
        <URL value="@css/register.css" />
    </stylesheets>
    <children>
        <Label layoutX="550.0" layoutY="80.0" styleClass="register-title" text="Criar Conta" />

        <TextField fx:id="nameField" layoutX="450.0" layoutY="160.0" promptText="nome" styleClass="text-input" />
        <TextField fx:id="usernameField" layoutX="450.0" layoutY="220.0" promptText="username" styleClass="text-input" />
        <TextField fx:id="emailField" layoutX="450.0" layoutY="280.0" promptText="email" styleClass="text-input" />
        <PasswordField fx:id="passwordField" layoutX="450.0" layoutY="340.0" promptText="senha" styleClass="text-input" />

        <Button onAction="#selectProfilePicture" layoutX="450.0" layoutY="420.0" styleClass="secondary-button" text="Foto de Perfil" />
        <Label fx:id="profilePicLabel" layoutX="650.0" layoutY="430.0" text="Nenhuma foto selecionada" />

        <Button fx:id="send" onAction="#send" layoutX="550.0" layoutY="500.0" styleClass="register-button" text="Enviar" />
    </children>
</AnchorPane>
