<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ChannelCardController"
      alignment="TOP_CENTER" spacing="5" maxWidth="180" prefWidth="180" styleClass="card"
      onMouseClicked="#onChannelClicked">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>

    <ImageView fx:id="channelProfilePic" fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true">
        <clip>
            <Circle centerX="50" centerY="50" radius="50" />
        </clip>
        <VBox.margin>
            <Insets bottom="5"/>
        </VBox.margin>
    </ImageView>

    <Label fx:id="channelNameLabel" text="Nome do Canal" wrapText="true" alignment="CENTER" styleClass="card-title"/>
    
    <Label fx:id="subscriberCountLabel" text="0 inscritos" alignment="CENTER" styleClass="card-subtitle"/>

</VBox>
