<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ChannelCardController"
      alignment="TOP_CENTER" spacing="5" maxWidth="180" prefWidth="180" styleClass="post-card"
      onMouseClicked="#onChannelClicked">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>
    <style>
        .post-card {
            -fx-background-color: white;
            -fx-background-radius: 8;
            -fx-border-color: #e0e0e0;
            -fx-border-radius: 8;
            -fx-border-width: 1;
            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);
            -fx-cursor: hand;
        }
        .post-card:hover {
            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 3);
        }
    </style>

    <ImageView fx:id="channelProfilePic" fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true">
        <clip>
            <Circle centerX="50" centerY="50" radius="50" />
        </clip>
        <VBox.margin>
            <Insets bottom="5"/>
        </VBox.margin>
    </ImageView>

    <Label fx:id="channelNameLabel" text="Nome do Canal" wrapText="true" alignment="CENTER">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Label>
    <Label fx:id="subscriberCountLabel" text="0 inscritos" textFill="#606060" alignment="CENTER">
        <font>
            <Font size="12.0"/>
        </font>
    </Label>

</VBox>
