<BorderPane styleClass="root-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DashboardController">
    <stylesheets>
        <URL value="@css/dashboard.css" />
    </stylesheets>
    <!-- TOPO -->
    <top>
        <HBox styleClass="top-bar">
            <children>
                <Label styleClass="app-title" text="Streamly" />
                <Region HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER" maxWidth="600.0" prefWidth="400.0">
                    <children>
                        <ChoiceBox fx:id="searchFilterChoiceBox" styleClass="search-choice-box">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Todos" />
                                    <String fx:value="Posts" />
                                    <String fx:value="Canais" />
                                </FXCollections>
                            </items>
                        </ChoiceBox>
                        <TextField fx:id="searchField" promptText="Pesquisar" styleClass="search-field" HBox.hgrow="ALWAYS" />
                        <Button onAction="#handleSearch" styleClass="search-button" text="ðŸ”" />
                    </children>
                </HBox>
                <Region HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER" spacing="10">
                    <ImageView fx:id="userProfilePic" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" styleClass="user-profile-pic">
                        <clip>
                            <Circle centerX="16.0" centerY="16.0" radius="16.0" />
                        </clip>
                    </ImageView>
                    <MenuButton fx:id="userMenuButton" styleClass="profile-menu-button" text="UsuÃ¡rio" visible="false" managed="false">
                        <items>
                            <MenuItem disable="true" style="-fx-font-weight: bold;" text="Meus Canais" />
                            <MenuItem onAction="#handleCreateChannel" text="Criar Canal" />
                            <SeparatorMenuItem />
                            <Menu fx:id="channelsSubMenu" text="Trocar Canal" />
                            <MenuItem onAction="#viewHistory" text="Ver HistÃ³rico" />
                            <MenuItem onAction="#enterStudio" text="EstÃºdio de CriaÃ§Ã£o" />
                            <SeparatorMenuItem />
                            <MenuItem onAction="#handleDeleteAccount" text="Excluir Conta" />
                            <SeparatorMenuItem />
                            <MenuItem onAction="#logout" text="Logout" />
                        </items>
                    </MenuButton>
                    <Button fx:id="loginButton" text="Login" styleClass="login-button" onAction="#handleLogin" visible="false" managed="false" />
                    <MenuButton fx:id="createOrAddMemberMenuButton" styleClass="icon-button" text="+" visible="false" managed="false">
                        <items>
                            <MenuItem onAction="#enterStudio" text="Criar Postagem" />
                            <MenuItem onAction="#handleAddMember" text="Adicionar Membro ao Canal" />
                        </items>
                    </MenuButton>
                </HBox>
            </children>
        </HBox>
    </top>

    <!-- CONTEÃšDO -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="content-area">
            <content>
                <VBox alignment="TOP_CENTER" spacing="20">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    <children>
                        <Label fx:id="sectionTitle" styleClass="section-title" text="Recomendados" />
                        <VBox fx:id="channelsSection" alignment="CENTER" managed="false" spacing="10" visible="false">
                            <Label styleClass="section-title" text="Canais" />
                            <FlowPane fx:id="channelsGrid" alignment="TOP_LEFT" hgap="20" maxWidth="1200" prefWrapLength="1200" vgap="20" />
                        </VBox>
                        <VBox alignment="CENTER">
                            <children>
                                <FlowPane fx:id="postsGrid" alignment="TOP_LEFT" hgap="20" maxWidth="1200" prefWrapLength="1200" vgap="20" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
