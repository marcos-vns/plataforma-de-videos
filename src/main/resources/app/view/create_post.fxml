<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CreatePostController">
    <stylesheets>
        <URL value="@css/studio.css" />
    </stylesheets>
    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <VBox alignment="CENTER">
                    <padding>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                    </padding>
                    <children>
                        <VBox alignment="CENTER_LEFT" spacing="20.0" styleClass="form-container">
                            <children>
                                <Label styleClass="form-title" text="Nova Publicação" />

                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <children>
                                        <Label styleClass="form-label" text="Tipo de Post:" />
                                        <ComboBox fx:id="comboPostType" onAction="#onTypeChange" prefWidth="150.0" styleClass="form-field"/>
                                    </children>
                                </HBox>
                                <Separator />
                                <VBox spacing="5">
                                    <Label styleClass="form-label" text="Título" />
                                    <TextField fx:id="txtTitle" promptText="Digite o título da publicação" styleClass="form-field"/>
                                </VBox>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Button onAction="#selectThumbnail" styleClass="btn-selecionar" text="Selecionar Miniatura" />
                                    <Label fx:id="lblThumbStatus" text="Nenhuma imagem" />
                                </HBox>

                                <!-- Seção de VÍDEO -->
                                <VBox fx:id="videoSection" spacing="10">
                                    <children>
                                        <Label styleClass="form-label" text="Descrição do Vídeo" />
                                        <TextArea fx:id="txtDescription" prefHeight="100.0" promptText="Opcional: Descreva seu vídeo" styleClass="form-field"/>
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <Button onAction="#selectVideo" styleClass="btn-selecionar" text="Selecionar Arquivo (.mp4)" />
                                            <Label fx:id="lblVideoStatus" text="Nenhum arquivo" />
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Seção de TEXTO -->
                                <VBox fx:id="textSection" spacing="10" managed="false" visible="false">
                                    <children>
                                        <Label styleClass="form-label" text="Conteúdo da Publicação" />
                                        <TextArea fx:id="txtContent" prefHeight="200.0" promptText="Escreva o conteúdo do seu post de texto..." styleClass="form-field"/>
                                    </children>
                                </VBox>
                                <Separator />
                                <HBox spacing="20" alignment="CENTER_RIGHT">
                                    <Button onAction="#backToStudio" styleClass="btn-cancelar" text="Cancelar" />
                                    <Button onAction="#onPublishClick" styleClass="btn-publicar" text="Publicar" />
                                </HBox>
                                <Label fx:id="lblStatus" text="" textFill="#d32f2f" wrapText="true" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
