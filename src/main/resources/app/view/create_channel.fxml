<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CreateChannelController"
      spacing="20" style="-fx-padding: 20;">
    <Label text="Criar Novo Canal">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>

    <HBox spacing="15" alignment="CENTER_LEFT">
        <ImageView fx:id="profileImageView" fitHeight="80" fitWidth="80" preserveRatio="true"
                   style="-fx-border-color: #ddd; -fx-border-radius: 40; -fx-background-radius: 40;"/>
        <Button text="Escolher Foto" onAction="#chooseImage"/>
    </HBox>

    <VBox spacing="5">
        <Label text="Nome do Canal"/>
        <TextField fx:id="channelNameField" promptText="Digite o nome do seu canal"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancelar" onAction="#cancel"/>
        <Button text="Criar Canal" onAction="#createChannel" style="-fx-background-color: #007bff; -fx-text-fill: white;"/>
    </HBox>
</VBox>
