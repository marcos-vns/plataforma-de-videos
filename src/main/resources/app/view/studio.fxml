<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane prefHeight="700.0" prefWidth="900.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StudioController">
    <stylesheets>
        <URL value="@css/studio.css" />
    </stylesheets>
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-container">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="10" />
                </padding>
                <Button onAction="#backToDashboard" styleClass="back-button" text="←" />
                <Label styleClass="studio-title" text="Estúdio de Criação" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="roleLabel" style="-fx-background-color: #f0f0f0; -fx-padding: 5 10 5 10; -fx-background-radius: 10; -fx-font-weight: bold;" text="Role: MODERATOR" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-container">
                 <padding>
                    <Insets bottom="20" left="40" right="40" top="20" />
                </padding>
                <children>
                    <ImageView fx:id="channelProfilePic" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                        <clip>
                            <Circle centerX="40.0" centerY="40.0" radius="40.0" />
                        </clip>
                    </ImageView>
                    <VBox spacing="5.0">
                        <children>
                            <Label fx:id="channelNameLabel" styleClass="channel-name" text="Nome do Canal" />
                            <Label styleClass="channel-subtitle" text="Painel do canal" />
                        </children>
                    </VBox>
                </children>
            </HBox>
        </VBox>
    </top>

    <center>
        <StackPane>
            <!-- MAIN DASHBOARD -->
            <VBox fx:id="mainDashboard" spacing="20.0">
                <padding>
                    <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
                </padding>
                <children>
                    <HBox spacing="15.0" alignment="CENTER_LEFT">
                        <children>
                            <TextField fx:id="searchField" promptText="Pesquisar posts no canal..." styleClass="form-field" HBox.hgrow="ALWAYS" />
                            <Button onAction="#handleSearch" styleClass="btn-gerenciamento" text="Pesquisar" />
                            <Button fx:id="createPostBtn" onAction="#createPost" styleClass="btn-criar-post" text="CRIAR POST" />
                        </children>
                    </HBox>
                    <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                        <children>
                            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                <children>
                                    <Label styleClass="section-title" text="Posts Recentes" />
                                    <ListView fx:id="postsListView" VBox.vgrow="ALWAYS" />
                                </children>
                            </VBox>
                            <VBox fx:id="ownerPanel" spacing="15.0" prefWidth="250.0" styleClass="card-estudio">
                                <children>
                                    <Label styleClass="section-title" text="Gerenciar Canal" />
                                    <Separator />
                                    <Button onAction="#handleEditChannel" styleClass="btn-gerenciamento" text="Alterar Nome/Foto" maxWidth="Infinity" />
                                    <Button onAction="#handleAddMember" styleClass="btn-gerenciamento" text="Adicionar Membro" maxWidth="Infinity" />
                                    <Button onAction="#handleDeleteChannel" styleClass="btn-gerenciamento, btn-delete" text="Excluir Canal" maxWidth="Infinity" />
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                </children>
            </VBox>

            <!-- COMMENT MODERATION VIEW -->
            <VBox fx:id="commentModerationView" spacing="15.0" visible="false" managed="false" style="-fx-background-color: white;">
                <padding>
                    <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
                </padding>
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <children>
                            <Button onAction="#closeModeration" styleClass="back-button" text="← Voltar para Posts" />
                            <Label fx:id="moderatingPostTitle" styleClass="section-title" text="Moderando: Título do Post" />
                        </children>
                    </HBox>
                    <VBox fx:id="postEditArea" spacing="10.0" styleClass="card-estudio">
                         <padding>
                            <Insets bottom="15" left="15" right="15" top="15" />
                        </padding>
                        <children>
                            <Label styleClass="form-label" text="Editar Postagem" />
                            <TextField fx:id="editTitleField" promptText="Título" styleClass="form-field"/>
                            <TextArea fx:id="editDescriptionField" promptText="Descrição / Conteúdo" prefHeight="80.0" styleClass="form-field" wrapText="true" />
                            <HBox spacing="10.0">
                                <children>
                                    <Button onAction="#handleUpdatePost" styleClass="btn-publicar" text="Salvar Alterações" />
                                    <Button onAction="#deleteSelectedPost" styleClass="btn-cancelar, btn-delete" text="Excluir Post" />
                                </children>
                            </HBox>
                        </children>
                    </VBox>
                    <Label styleClass="section-title" text="Comentários" />
                    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                        <content>
                            <VBox fx:id="commentsContainer" spacing="10.0" />
                        </content>
                    </ScrollPane>
                </children>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
