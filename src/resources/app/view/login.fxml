<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginController">

   <children>

      <Button layoutX="465.0" layoutY="512.0"
              text="Login"
              fx:id="loginButton"
              onAction="#login">
         <font>
            <Font size="30.0"/>
         </font>
      </Button>

      <Button layoutX="645.0" layoutY="513.0"
              text="Cadastrar"
              fx:id="registerButton"
              onAction="#register">
         <font>
            <Font size="30.0"/>
         </font>
      </Button>

      <TextField layoutX="456.0" layoutY="237.0"
                 promptText="email"
                 fx:id="emailField">
         <font>
            <Font size="30.0"/>
         </font>
      </TextField>

      <TextField layoutX="452.0" layoutY="345.0"
                 promptText="senha"
                 fx:id="passwordField">
         <font>
            <Font size="30.0"/>
         </font>
      </TextField>

   </children>
</AnchorPane>
